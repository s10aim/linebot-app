<div class="form-container">
  <%= form_with model: @post, local: true, id: "post-text-form" do |form| %>
    <div class="form-group">
      <%= form.label :title, "キーワード" %>
      <%= form.text_field :title, class: "form-control", id: "post-text-title" %>
      <div class="invalid-feedback">
        同じキーワードがすでに存在しています。
      </div>
    </div>
    <div>
      <%= form.label :content, "本文" %>
      <%= form.text_area :content, class: "form-control mb-3", rows: 7 %>
    </div>
    <div class="text-right">
      <%= form.submit "送信", class: "btn btn-outline-dark mt-3 mb-5", id: "post-text-btn", disabled: true %>
    </div>
  <% end %>
</div>
<div class="form-container">
  <%= form_with model: @post, local: true, id: "post-form", class: "d-none" do |form| %>
    <div class="form-group">
      <%= form.label :title, "キーワード" %>
      <%= form.text_field :title, class: "form-control", id: "post-drop-title" %>
    </div>
    <%= form.label :images, "画像" %>
    <div id="post-dropzone"></div>
    <div class="text-right">
      <%= form.submit "送信", class: "btn btn-outline-dark mt-3 mb-5", id: "post-drop-btn", disabled: true %>
    </div>
  <% end %>
</div>
